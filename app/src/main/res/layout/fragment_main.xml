<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_main"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:shrinkColumns="0,1,2">

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_freshShop"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_fresh_market" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生鲜超市" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_my_kitchen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的厨房" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_countryside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="农家乐" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_discount" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="促销活动" />
                </LinearLayout>
            </TableRow>


        </TableLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="58dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:background="@drawable/setbar_bg"
                    android:paddingLeft="8dp"
                    android:text="推荐"
                    android:textSize="18sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setbar_bg">

                    <TableRow
                        android:layout_width="match_parent"
                        android:paddingLeft="16dp">

                        <LinearLayout
                            android:id="@+id/product1_recommand_fragment_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/product1_recommand_image_fragment_main"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/product1_priceCurrent_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="￥6.5/斤" />

                            <TextView
                                android:id="@+id/product1_priceLast_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="￥6.5/斤"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/product2_recommand_fragment_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/product2_recommand_image_fragment_main"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/product2_priceCurrent_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="￥6.5/斤" />

                            <TextView
                                android:id="@+id/product2_priceLast_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="￥6.5/斤"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/product3_recommand_fragment_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/product3_recommand_image_fragment_main"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/product3_priceCurrent_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="￥6.5/斤" />

                            <TextView
                                android:id="@+id/product3_priceLast_fragment_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="￥6.5/斤"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </TableRow>


                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/setbar_bg"
                    android:paddingLeft="8dp"
                    android:text="热销"
                    android:textSize="18sp" />

                <GridLayout
                    android:id="@+id/gridLayout_fragment_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:background="@drawable/setbar_bg">
                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorTransparent">

        <EditText
            android:id="@+id/editText_fragment_main"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/ic_search_view" />

        <Button
            android:id="@+id/searchButton_fragment_main"
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/editText_fragment_main"
            android:background="@color/colorPrimary"
            android:onClick="sayHello"
            android:text="搜索"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</FrameLayout>
